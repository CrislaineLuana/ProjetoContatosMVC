@model LoginModel
@{
    Layout = "_LayoutDeslogada";
	ViewData["Title"] = "Login Sistema Contatos";
}

@if(TempData["MensagemSucesso"] != null)
                            {
                                 <div class="alert alert-success " role="alert">                                 
                                   @TempData["MensagemSucesso"]
                                </div>
                            }         
@if(TempData["MensagemErro"] != null)
                            {
                                 <div class="alert alert-danger " role="alert">                                 
                                   @TempData["MensagemErro"]
                                </div>
                            }                            
<form asp-action="Entrar" asp-controller="Login" method="post">
  <div class="mb-3">
    <label for="" class="form-label">Login</label>
    <input type="text" asp-for="Login" class="form-control" placeholder="Digite seu login!">
    <span asp-validation-for="Login" ></span>
  </div>
  <div class="mb-3">
    <label for="" class="form-label" >Senha</label>
    <input type="password" asp-for="Senha" class="form-control" id="senha" placeholder="Digite sua senha!">
    <span asp-validation-for="Senha" ></span>
  </div>

  <p class="mb-4 text-sm-mx-auto">
        Esqueceu sua senha?
        <a class="text-primary text-gradient font-weight-bold" asp-controller="Login" asp-action="RedefinirSenha" >Redefinir minha senha!</a>
  </p>

  <button type="submit" class="btn btn-primary btn-block">Logar</button>
</form>